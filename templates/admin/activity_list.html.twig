{% extends "admin/masterAdmin.html.twig" %}
{% block content %}
<div class="col-md-9">
            <!-- Website Overview -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Activities</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                      <div class="col-md-12">
                          <input class="form-control" type="text" placeholder="Filter Pages...">
                          <a href="/activity/add"><button>Create a new activity</button></a>
                      </div>
                </div>
                <br>
                <table class="table table-striped table-hover">
                      <tr>
                        <th>Id</th>
                        <th>Theme</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th></th>
                      </tr>
                      {% for a in list %}
                      <tr>
                        <td>{{a.id}}</td>
                        <td>{{a.theme}}</td>
                        <td>{{a.description}}</td>
                        <td>{{a.type}}</td>
                        <td>{{a.givenTime}}</td>
                        <td><a class="btn btn-default" href="/activity/edit?id={{a.id}}">Edit</a> 
                        <a class="btn btn-danger" href="/activity/delete?id={{a.id}}">Delete</a></td>
                      </tr>
                      {% endfor %}
                  </table>
              </div>
              </div>
          </div>
{% endblock content %}