{% extends "admin/masterAdmin.html.twig" %}
{% block content %}

<div class="col-md-9">
          <div class="col-md-9">
            <!-- Website Overview -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Add Activity</h3>
              </div>

  {% if errorList %}
    <ul class="errorMessage" style="color:red;">
      {% for error in errorList %}
        <li>{{error}}</li>
      {% endfor %}
    </ul>
  {% endif %}
              <div class="panel-body">
                <form class="needs-validation"  method="post" novalidate>
                  <div class="form-group has-validation">
                    <label  for="theme" class="form-label">Theme*</label>
                     <input type="text" class="form-control" id="theme" placeholder=" " name="theme" value="{{ list.theme }}" required>
                  </div>

                  <div class="form-group">
                    <label  for="description" class="form-label">Description*</label>
                    <textarea rows="8" class="form-control" id="description" name="description" required>{{list.description}}</textarea>
                  </div>

                  <div class="form-group">
                     <label  for="type" class="form-label">Type*</label>
                        <select class="form-select" id="type" name="type" required>
                            <option value="0">Please Choose...</option>                    
                            <option value=1>Offline Salon</option>
                            <option value=2>Online Lecture</option>
                            <option value=3>Open Day</option>
                            <option value=4>Family Day</option>
                        </select>
                  </div>

                  <div class="form-group">
                    <label for="givenTime" class="form-label">Given Time*</label>
                    <input type="date" class="form-control" id="givenTime" placeholder=""  name="givenTime" value="{{ list.givenTime }}" required>
                  <div class="invalid-feedback">
                        Please choose given time.
                  </div>
                  </div>

                  <input type="submit" class="btn btn-default" value="Add">
                </form>
              </div>
              </div>
          </div>
{% endblock content %}
