{% extends "admin/masterAdmin.html.twig" %}
{% block content %}

{% if errorList %}
    <ul class="errorMessage">
      {% for error in errorList %}
        <li>{{error}}</li>
      {% endfor %}
    </ul>
{% endif %}

{% if flashMessage %}
        <div id="flashMessage">{{flashMessage}}</div>
{% endif %}  

<div class="col-md-9">
          <div class="col-md-9">
            <!-- Website Overview -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Edit User</h3>
              </div>
              <div class="panel-body">
                User Type: {{ list.type}}<br>
                <form method="post">
                  <div class="form-group">
                    <label  for="email" class="form-label">User Email</label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com" name="email" value="{{ list.email }}">
                  </div>
                  <div class="form-group">
                    <label  for="username" class="form-label">User Name</label>
                    <input class="form-control" id="username" placeholder="Username" name="userName" value="{{ list.userName }}" required>
                  </div>
                  <div class="form-group">
                    <label>User Phone</label>
                    <input type="text" class="form-control" id="phone" placeholder="1234 Main St"  name="phone" value="{{ list.phone }}" required>
                  </div>
                  <input type="submit" class="btn btn-default" value="Update">
                </form>
              </div>
              </div>
          </div>
{% endblock content %}