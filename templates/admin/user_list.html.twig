{% extends "admin/masterAdmin.html.twig" %}
{% block content %}
<div class="col-md-9">
            <!-- Website Overview -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Users</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                      <div class="col-md-12">
                          <input class="form-control" type="text" placeholder="Filter Pages...">
                          <a href="/user/add"><button>Create a new user</button></a>
                      </div>
                </div>
                <br>
                <table class="table table-striped table-hover">
                      <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th></th>
                      </tr>
                      {% for u in list %}
                      <tr>
                        <td>{{u.id}}</td>
                        <td>{{u.userName}}</td>
                        <td>{{u.type}}</td>
                        <td>{{u.email}}</td>
                        <td>{{u.phone}}</td>
                        <td><a class="btn btn-default" href="/user/edit?id={{u.id}}">Edit</a> 
                            <a class="btn btn-danger" href="/user/delete?id={{u.id}}">Delete</a></td>
                      </tr>
                      {% endfor %}
                  </table>
              </div>
              </div>

          </div>

{% endblock content %}