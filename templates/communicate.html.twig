{% extends "master.html.twig" %}

{% block title %}Pet Info Communication{% endblock %} 

{% block content %}

{% if errorList %}
<div class="container">
    <ul>
    {% for error in errorList %}
        <li class="errorMessage">{{ error }}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>Pet Info Communication</h2>
            <p class="lead">When you come for a visit, we can only show you the pets you are interested in, you are compatible with and that are available for adoption.</p>
        </div>
  
        <div class="row g-3">

            <div class="col-md-5 col-lg-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                  <span class="text-muted">Pet Information</span>
                  <span class="badge bg-secondary rounded-pill">{{ p.id }}</span>
                </h4>
        
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="../{{p.ImageFolderPath}}" width="100%" height="225">
                        <div class="card-body">
                            <p class="card-text">{{p.description}}</p>
                        </div>
                        <hr>
                        <div class="card-body">
                            <p class="card-text">Breed: {{p.breed}}</p>
                        </div>
                        <hr>
                        <div class="card-body">
                            <p class="card-text">Birthday:  {{p.birthday}}</p>
                        </div>
                        <hr>
                        <div class="card-body">
                            <p class="card-text">Size: {{p.size}} inches.&nbsp;&nbsp;&nbsp; Weight: {{p.weight}} pounds</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Your quesions about this pet:</h4>
                
                <form class="needs-validation" method="POST"">
                    <div class="row g-3">
                        <div class="col-12">
                            <textarea rows="20" class="form-control" id="questions" placeholder="" name="questions" value="{{ v.questions }}"></textarea>
                            <div class="invalid-feedback">
                                Please enter your questions.
                            </div>
                        </div> 

                    </div>
                    <hr class="my-4">
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Submit</button>
                </form>
            </div>
        </div>
    
        {% if c %}
        <hr class="my-4">
        <div>
            <div class="bd-example">
                <div>
                    <h4 class="mb-3">Communications related to this pet.</h4>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Posted on</th>
                            <th scope="col">Questions</th>
                            <th scope="col">Replied On</th>
                            <th scope="col">Answers</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for com in c %}
                        <tr class="table-info">
                            <th scope="row">{{ com.id }}</th>
                            <td>{{ com.questionDate }}</td>
                            <td>{{ com.questions }}</td>
                            <td>{{ com.answerDate }}</td>
                            <td>{{ com.answers }}</td>
                        </tr>
                        {% endfor %}                 
 
                    </tbody>
                </table>
            </div>
        </div>
        {% endif %}
    
    </main>

{% endblock content %}

